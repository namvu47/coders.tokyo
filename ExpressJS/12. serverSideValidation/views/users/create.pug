extends ../layout/common

block content

	h1 Create User

	form(action = '/users/create', method = 'POST')
		.form-group
			label(for='name') Name
			input#name.form-control(type='text', aria-describedby='emailHelp', placeholder='Enter email')
		.form-group
			label(for='phone') Phone
			input#phone.form-control(type='text', placeholder='Enter Phone')

		button.btn.btn-primary(type='submit') Submit
